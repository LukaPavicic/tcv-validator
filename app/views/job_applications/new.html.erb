<%= render "layouts/navigation" %>

<div class="flex flex-col items-center">
  <div class="container p-10">
    <h1 class="text-2xl font-bold border-b-2 border-primary">Nova prijava</h1>

    <%= form_with model: @job_application, method: :post do |form| %>
      <div class="mt-4 ">
        <%= form.label :applicant_full_name, "Ime i prezime kandidata (obvezno)", class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= form.text_field :applicant_full_name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
      </div>
      <div class="mt-4 ">
        <%= form.label :applicant_address, "Adresa kandidata", class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= form.text_field :applicant_address, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
      </div>
      <div class="mt-4 ">
        <%= form.label :applicant_phone_number, "Broj mobitela kandidata", class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= form.text_field :applicant_phone_number, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
      </div>
      <div class="mt-4 ">
        <%= form.label :applicant_oib, "OIB kandidata", class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= form.text_field :applicant_oib, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
      </div>
      <div class="mt-4">
        <%= form.label :position_id, "Pozicija", class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= form.select :position_id, options_for_select(Position.all.map {|pos| [pos.name, pos.id]}), {}, { class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" } %>
      </div>
      <div class="mt-4">
        <%= form.label :cv_text, "CV", class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= form.text_area :cv_text, rows: 5, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500" %>
      </div>

      <button type="submit" class="mt-4 text-white bg-primary hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Spremi</button>
  <% end %>
  </div>
</div>