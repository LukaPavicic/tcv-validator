<section class="bg-gray-50">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-screen lg:py-0">
    <div class="flex items-center gap-2 mb-4">
      <span class="text-2xl font-semibold text-gray-900">
        <span class="text-primary font-bold text-3xl">T</span>vz<span class="text-primary font-bold text-3xl">CV</span> <span>V</span>alidator
      </span>
    </div>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Prijava
        </h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="space-y-4">
            <div>
              <%= f.label :email, "TVZ Email", class: "block mb-2 text-sm font-medium text-gray-900" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@tvz.hr", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5", required: true %>
            </div>
            <div>
              <%= f.label :password, "Lozinka", class: "block mb-2 text-sm font-medium text-gray-900" %>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5", required: true %>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <%= f.check_box :remember_me, class: "accent-green-600 w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :remember_me, "Zapamti prijavu", class: "text-gray-500" %>
                </div>
              </div>
            </div>
            <button type="submit" class="w-full text-white bg-primary hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Prijavi me</button>
          </div>
        <% end %>
      </div>
    </div>
    <%= image_tag("https://www.tvz.hr/wp-content/uploads/2021/12/tvz_znak_150.png", class: "h-12 mt-4") %>
  </div>
</section>